@model HabitAqui.ViewModels.HabitacoesEmpresaViewModel

@{
    ViewData["Title"] = "Editar Habitação";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["ErroMensagem"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErroMensagem"]
    </div>
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="habitacaoId" asp-for="Habitacao.Id" />

    <div class="form-group">
        <label asp-for="Habitacao.Nome" class="control-label"></label>
        <input asp-for="Habitacao.Nome" class="form-control" />
        <span asp-validation-for="Habitacao.Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Habitacao.Descricao" class="control-label"></label>
        <textarea asp-for="Habitacao.Descricao" class="form-control"></textarea>
        <span asp-validation-for="Habitacao.Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Habitacao.DataInicio" class="control-label"></label>
        <input asp-for="Habitacao.DataInicio" class="form-control" type="date" />
        <span asp-validation-for="Habitacao.DataInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Habitacao.DataFim" class="control-label"></label>
        <input asp-for="Habitacao.DataFim" class="form-control" type="date" />
        <span asp-validation-for="Habitacao.DataFim" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Habitacao.Localidade" class="control-label"></label>
        <input asp-for="Habitacao.Localidade" class="form-control" />
        <span asp-validation-for="Habitacao.Localidade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Habitacao.Preco" class="control-label"></label>
        <input asp-for="Habitacao.Preco" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Habitacao.Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Habitacao.PeriodoMinimoArrendamento" class="control-label"></label>
        <input asp-for="Habitacao.PeriodoMinimoArrendamento" class="form-control" type="number" />
        <span asp-validation-for="Habitacao.PeriodoMinimoArrendamento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Habitacao.Categoria.Nome" class="control-label"></label>
        <select asp-for="Habitacao.Categoria.Nome" asp-items="ViewBag.Categorias" class="form-control"></select>
        <span asp-validation-for="Habitacao.Categoria" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Editar</button>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>