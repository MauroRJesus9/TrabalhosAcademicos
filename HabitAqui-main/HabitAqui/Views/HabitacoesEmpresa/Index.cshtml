@model HabitAqui.ViewModels.HabitacoesEmpresaViewModel

@{
    ViewData["Title"] = "Listar Habitações";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["ErroMensagem"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErroMensagem"]
    </div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Nova Habitação</a>
</div>


@using (Html.BeginForm("Index", "HabitacoesEmpresa", FormMethod.Post, new { @class = "d-flex flex-wrap align-items-start" }))
{
    <div class="form-group">
        <label asp-for="CategoriaFiltro" class="control-label">Categoria:</label>
        <select asp-for="CategoriaFiltro" asp-items="ViewBag.Categorias" class="form-control">
            <option value="">Todas as Categorias</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="EstadoFiltro" class="control-label">Estado:</label>
        <select asp-for="EstadoFiltro" asp-items="ViewBag.Estados" class="form-control">
            <option value="">Todos os Estados</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="OrdenarPor" class="control-label">Ordenar por:</label>
        <select asp-for="OrdenarPor" class="form-control">
            <option value="Nome">Nome</option>
            <option value="Localidade">Localidade</option>
            <option value="DataInicio">Data de Início</option>
            <option value="DataFim">Data de Fim</option>
            <option value="Preco">Preço</option>
            <!-- Adicionar mais opções conforme necessário -->
        </select>
    </div>

    <div class="form-group">
        <label asp-for="OrdemAscendente" class="control-label">Ordem:</label>
        <select asp-for="OrdemAscendente" class="form-control">
            <option value="true">Ascendente</option>
            <option value="false">Descendente</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Filtrar e Ordenar</button>
}

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Categoria</th>
            <th>Data Inicio</th>
            <th>Data Fime</th>
            <th>Localidade</th>
            <th>Preço</th>
            <th>P.M.A</th>
            <th>Estado</th>
            <th>Ativo</th>
            <th>Ações</th>
            <!-- Adicionar outras colunas conforme necessário -->
        </tr>
    </thead>
    <tbody>
        @foreach (var habitacao in Model.habitacoes)
        {
            <tr>
                <td>@habitacao.Nome</td>
				<td>@habitacao.Descricao</td>
                <td>@habitacao.Categoria</td>
                <td>@habitacao.DataInicio</td>
                <td>@habitacao.DataFim</td>
                <td>@habitacao.Localidade</td>
                <td>@habitacao.Preco</td>
                <td>@habitacao.PeriodoMinimoArrendamento</td>
                <td>@habitacao.Estado</td>
                <td>@(habitacao.Ativo ? "Sim" : "Não")</td>
                <!-- adicionar mais colunas conforme necessário -->
                <td>
                    <div class="btn-group">
                        <!-- Botões de Ativar/Inativar -->
                        @if (habitacao.Ativo){
                            <form asp-action="AtivarInativar" method="post">
                                <input type="hidden" name="habitacaoId" value="@habitacao.Id" />
                                <button type="submit" class="btn btn-danger">Inativar</button>
                            </form>
                        }
                        else{
                            <form asp-action="AtivarInativar" method="post">
                                <input type="hidden" name="habitacaoId" value="@habitacao.Id" />
                                <button type="submit" class="btn btn-success">Ativar</button>
                            </form>
                        }

                        <form asp-action="Edit" method="get">
                            <input type="hidden" name="habitacaoId" value="@habitacao.Id" />
                            <button type="submit" class="btn btn-warning">Editar</button>
                        </form>

                        <form asp-action="Details" method="get">
                            <input type="hidden" name="habitacaoId" value="@habitacao.Id" />
                            <button type="submit" class="btn btn-warning">Details</button>
                        </form>

                        <!-- Botão de Eliminar -->
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="habitacaoId" value="@habitacao.Id" />
                            <button type="submit" class="btn btn-warning">Eliminar</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>