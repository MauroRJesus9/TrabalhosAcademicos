@model HabitAqui.ViewModels.Clientes.ClienteViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
    </dl>
</div>
<div>
    <h4>Arrendamentos do utilizador</h4>
    <table class="table">
        <thead>
            <tr>
                <!-- Add table headers based on your Arrendamento model properties -->
                <th>Data Inicio</th>
                <th>Data Fim</th>
                <th>Custo</th>
                <!-- ... -->
            </tr>
        </thead>
        <div>Arrendamentos Count: @ViewBag.ArrendamentosCount</div>
        <tbody>
            @foreach (var arrendamento in Model.Arrendamentos)
            {
                <tr>
                    <!-- Add table cells based on your Arrendamento model properties -->
                    <td>@arrendamento.DataInicio</td>
                    <td>@arrendamento.DataFim</td>
                    <td>@arrendamento.Custo</td>
                    <!-- ... -->
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
